@model List<AppUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

<h1>Misafir Listesi</h1>


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad & Soyad</th>
        <th>Kullanıcı Adı</th>
        <th>Mail Adresi</th>
        <th>Düzenle</th>
        <th>Sil</th>
        <th>Geçmiş Yorumlar</th>
        <th>Geçmiş Turlar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            @{sayac += 1;}
        <th>@sayac</th> 
        <td>@item.Name @item.Surname</td>
        <td>@item.UserName</td>
        <td>@item.Email</td>
        <td><a href="/Admin/AdminUser/EditUser/@item.Id" class="btn btn-outline-primary">Düzenle</a></td>
        <td><a href="/Admin/AdminUser/DeleteUser/@item.Id" class="btn btn-outline-danger">Sil</a></td>
        <td><a href="/Admin/AdminUser/CommentUser/@item.Id" class="btn btn-outline-success">Yorumlar</a></td>
        <td><a href="/Admin/AdminUser/ReservationUser/@item.Id" class="btn btn-outline-dark">Tur Geçmişi</a></td>
      </tr>
    }
</table>
<a href="/Login/SignUp/" class="btn btn-outline-primary">Yeni Kullanıcı Kaydı</a>