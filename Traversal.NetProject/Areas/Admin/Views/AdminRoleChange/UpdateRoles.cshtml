@model RoleUpdateViewModel
@{
    ViewData["Title"] = "UpdateRoles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rol Düzenleme Sayfası</h1>
<form method="post">
    <div class="form-group"
         <label>Role ID</label>   
         <input type="text" asp-for="Id" value="@Model.Id" class="form-control"/>
    </div>
    <div class="form-group"
         <label>Role Görevi</label>   
         <input type="text" asp-for="name" value="@Model.name" class="form-control"/>
    </div>
    <button class="btn btn-outline-primary">Rol Güncelle</button>
</form>
