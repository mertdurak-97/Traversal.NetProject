@model List<AppUser>

@{
    ViewData["Title"] = "UserRolesList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Roller Ataması</h1>
<table class="table table-striped">
    <tr>
        <th>Kullanıcılar</th>
        <th>Rol Ata</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserName</td>
            <td><a href="/Admin/AdminRoleChange/AssignRole/@item.Id/" class="btn btn-outline-warning">Rol Ata</a></td>
        </tr>
    }
</table>
<a href="/Admin/AdminRoleChange/Index" class="btn btn-outline-primary">Roller Listesine Dön</a>

