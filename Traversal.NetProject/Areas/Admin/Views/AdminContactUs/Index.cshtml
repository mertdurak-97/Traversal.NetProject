@model List<ContactUs>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>İletişim Sayfası</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Adı&Soyadı</th>
        <th>Konu</th>
        <th>Mail</th>
        <th>Mesaj Bilgisi</th>
        <th>Mesaj Tarihi</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
      <tr>
        <th>@item.ContactUsId</th>
        <td>@item.NameSurname</td>
        <td>@item.Subject</td>
        <td>@item.Mail</td>
        <td>@item.MessageBody</td>
        <td>@item.MessageDate</td>
        <td><a href="/Admin/AdminContactUs/DeleteContact/" class="btn btn-outline-danger">Sil</a></td>
      </tr>
    }
</table>