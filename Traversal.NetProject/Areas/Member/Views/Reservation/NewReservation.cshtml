@model EntityLayer.Reservation

@{
    ViewData["Title"] = "NewReservation";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Yeni Rezarvasyon Sayfası</h1>
    <form method="post">



         <div class="form-group">
                @Html.Label("Lokasyon")
                <select asp-for="DestinationID" class="form-control" asp-items="ViewBag.Destination">
                </select>
            </div>
        <div class="form-group">
            @Html.Label("Kişi Sayısı")
            <input type="number" asp-for="PersonCount" class="form-control" />
        </div>
        <div class="form-group">
            @Html.Label("Tarih")
            <input type="date" asp-for="ReservationDate" class="form-control" />
        </div>
         <div class="form-group">
            @Html.Label("Ayrıca belirtmek istedikleriniz")
            <input type="text" asp-for="Description" class="form-control" />
        </div>
        <button class="btn btn-outline-primary">Rezarvasyonu Yap</button>
    </form>


    <script>
        window.onload=(function () {
            alert('Rezervasyonunuz başlangıçta onay bekliyor şeklinde alınacaktır.Rezervasyon onaylanma süreci için "Güncel Rezervasyonlarım" menusunu takip etmeyi unutmayın.');
        });</script>