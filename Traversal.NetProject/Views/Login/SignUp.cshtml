@model UserRegisterViewModel


@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">

<head>
	<title>Invent Signup Form Responsive Widget Template | Home :: W3layouts</title>
	<!-- Meta tag Keywords -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta charset="UTF-8" />
	<meta name="keywords"
		content="Invent Signup Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
	<script>
		addEventListener("load", function () {
			setTimeout(hideURLbar, 0);
		}, false);

		function hideURLbar() {
			window.scrollTo(0, 1);
		}
	</script>
	<!-- //Meta tag Keywords -->
	<!--/Style-CSS -->
	<link rel="stylesheet" href="~/web/css/style.css" type="text/css" media="all" />
	<!--//Style-CSS -->
	<script src="~/wegb/bootstrap/css/bootstrap.css"></script>
</head>

<body>
	<!-- /login-section -->
	<section class="w3l-login-6">
		<div class="login-hny">
			<div class="form-content">
				<div class="form-right">
					<div class="overlay">
						<div class="grid-info-form">
							<h5>Merhablar :)</h5>
							<h3>Yeni Hesap</h3>
							<p>Her şey sizlerin memnuniyeti ve tebessümleriniz içindir. Haberlerimizden ve Kampanyalarımızdan ilk önce sizler haberdar olun ve bize katılın !</p>
							<a href="/Login/SignIn/" class="read-more-1 btn">Giriş Yap</a>
						</div>
					
					</div>
				</div>
				<div class="form-left">
					<div class="middle">
						<h4>Bize Katılın</h4>
						<p>Yeni Hesap Oluştur. Gelişmeleri Ücretsiz Al !</p>
					</div>
					<form method="post" class="signin-form">
							<div class="form-input">
								<label>Adınız</label>
								<input type="text"  asp-for="Name" />
								<span asp-validation-for="Name" class="text-danger"></span>
							</div>
							<div class="form-input">
								<label>Soyadınız</label>
								<input type="text"  asp-for="Surname"/>	
								<span asp-validation-for="Surname" class="text-danger"></span>
							</div>
							<div class="form-input">
								<label>Kullanıcı Adınız</label>
								<input type="text" required asp-for="UserName"/>
							</div>
							<div class="form-input">
								<label>Mail Adresiniz</label>
								<input type="email" required asp-for="Mail" />
							</div>
							<div class="form-input">
								<label>Şİfre</label>
								<input type="password" required asp-for="Password"/>
							</div>
								<div class="form-input">
								<label>Şifre Tekrarı</label>
								<input type="password" required asp-for="ConfirmPassword" />
							</div>

							<div class="text-danger" asp-validation-summary="ModelOnly">

							</div>
							
							<label class="container">Kullanım Şartlarını	</a> Okudum ve Anladım
								<input type="checkbox">
								<span class="checkmark"></span>
							</label>
							<button class="btn">Hesap Oluştur</button>
					</form>
					<div class="copy-right text-center">
						<p>© @DateTime.Now.Year Travelsal. Tüm Hakları Saklıdır | Design by
								<a href="http://MertDurak.com/" target="_blank">MertDurak	</a></p>
					 </div>
				</div>
				
			</div>
			
		</div>
	</section>
	<!-- //login-section -->
</body>

</html>